{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"lib": ["DOM", "ESNext"],
		"types": ["svelte"],
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"]
}
